pipeline {
    agent any
    
    tools {
        // Define Maven tool. Ensure 'M2_HOME' is configured in Jenkins global tools configuration.
        maven 'M2_HOME'
    }

    stages {
        stage('SonarQube Scan') {
            steps {
                // Ensure the SonarQube environment is correctly configured in Jenkins.
                withSonarQubeEnv('sonarserver') {
                    // The Maven SonarQube plugin does not require explicit mention of the goal if it's correctly set up in the POM or settings.xml.
                    sh 'mvn verify sonar:sonar -Dsonar.projectKey=mycaro2007_week16-code'
                }
            }
        }

        stage('Maven Commands') {
            steps {
                // The 'install' phase automatically includes 'compile' and 'test', and 'package' is a part of 'install'.
                // So you can simplify this to just 'clean install'.
                sh 'mvn clean install'
            }
        }
    }
}
